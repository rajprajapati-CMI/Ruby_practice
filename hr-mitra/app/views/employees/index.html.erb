<div class="col-lg-12">
  <% if flash[:success] %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= flash[:success] %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
  <% if flash[:notice] %>
    <div class="alert alert-success alert-dismissible fade show " role="alert">
      <%= flash[:notice] %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
  <% if flash[:alert] %>
    <div class="alert alert-danger alert-dismissible fade show " role="alert">
      <%= flash[:alert] %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
  
  <div class="card rounded-0 mt-5 mb-5">
    <div class="card-body">
      <h2 class="text-center">Listing Employees</h2>
    </div>
  </div>
  
  <%= link_to "Create New Employee", new_employee_path, class: "btn btn-primary btn-lg mb-4 rounded-0" %>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Full Name</th>
        <th>Email</th>
        <th>Address</th>
        <th colspan="3" class="text-center">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @employees.each do |employee| %>
        <tr>
          <td><%= employee.first_name + " " + employee.last_name %></td>
          <td><%= employee.personal_email %></td>
          <td><%= employee.full_address %></td>
          <th><%= link_to "Edit", edit_employee_path(employee), class: "btn btn-warning btn-lg mb-4 rounded-0" %></th>
          <th><%= link_to "View", employee_path(employee), class: "btn btn-warning btn-lg mb-4 rounded-0" %></th>
          <th><%= link_to "Delete", employee_path(employee), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-lg mb-4 rounded-0" %></th>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
