<div class="col-lg-12">
  <div class="card" style="border: 1px solid #e3e6f0; border-radius: .35rem; box-shadow: 0 0 15px rgba(0, 0, 0, 0.1); margin-top: 3rem; margin-bottom: 3rem;">
    <div class="card-body" style="padding: 2rem;">
      <h2 class="text-center" style="text-align: center;">Employee Details</h2>
      <div class="row">
        <div class="col-lg-6">
          <h3 class="text-center" style="text-align: center;">Personal Information</h3>
          <p class="lead" style="font-size: 1.25rem; font-weight: 300;"><strong>First Name: </strong><%= @employee.first_name %></p>
          <p class="lead" style="font-size: 1.25rem; font-weight: 300;"><strong>Middle Name: </strong><%= @employee.middle_name.present? ? @employee.middle_name: 'NA' %></p>
          <p class="lead" style="font-size: 1.25rem; font-weight: 300;"><strong>Last Name: </strong><%= @employee.last_name %></p>
          <p class="lead" style="font-size: 1.25rem; font-weight: 300;"><strong>Personal Email: </strong><%= @employee.personal_email %></p>
          <%= link_to "Back to Employee",employees_path, class: "btn btn-primary btn-lg rounded-0", type: "submit" %>	
          <%= link_to "Edit Employee", edit_employee_path(@employee), class: "btn btn-warning btn-lg  rounded-0" %>
        </div>
        <div class="col-lg-6">
          <h3 class="text-center" style="text-align: center;">Address Information</h3>
          <p class="lead" style="font-size: 1.25rem; font-weight: 300;"><strong>Address Line 1: </strong><%= @employee.address_line_1 %></p>
          <p class="lead" style="font-size: 1.25rem; font-weight: 300;"><strong>Address Line 2: </strong><%= @employee.address_line_2 %></p>
          <p class="lead" style="font-size: 1.25rem; font-weight: 300;"><strong>City: </strong><%= @employee.city %></p>
          <p class="lead" style="font-size: 1.25rem; font-weight: 300;"><strong>State: </strong><%= @employee.state %></p>
          <p class="lead" style="font-size: 1.25rem; font-weight: 300;"><strong>Country: </strong><%= @employee.country %></p>
          <p class="lead" style="font-size: 1.25rem; font-weight: 300;"><strong>Pincode: </strong><%= @employee.pincode %></p>
        </div>
      </div>
    </div>
  </div>
</div>
